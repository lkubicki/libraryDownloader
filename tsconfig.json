    "module": "commonjs",
    "target": "es2022",
    "moduleResolution": "node",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "outDir": "./dist/",
    "paths": {
      "@/*": ["*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "- old -",
    "- tmp -"
